<div class="cards">

  <% @places.each do |place| %>
        <%= link_to(place_path(place.id)) do %>
        <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path place.photos.first.key, height: 300, crop: :fill %>')">
          <%= place.title %>
        </div>
       <% end %>
  <% end %>

</div>
