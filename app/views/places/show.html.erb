<div class="container my-5">
  <div class="row">
    <div class="col-12 col-lg-8">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner rounded-angle">
            <div class="carousel-item active">
              <%= cl_image_tag @place.photos.first.key, crop: :fill, class: "d-block w-100"%>
            </div>
            <% @place.photos[1..].each do |photo| %>
            <div class="carousel-item">
              <%= cl_image_tag photo.key, crop: :fill, class: "d-block w-100"%>
            </div>
            <% end %>
          </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
      </div>
    <div class="col-12 col-lg-4">
    <h2 class="mt-3 mx-2"><strong><%= @place.title %></strong></h2>
    <p class="mx-2">Propos√© par :  <%= cl_image_tag @place.user.photo.key, width: 40, height: 40, crop: :fill, class: "avatar-bordered dropdown-toggle" %> <%= @place.user.authority_name %> </p>
    <p class="my-5 mx-2"><%= @place.description %> </p>
    <p class><i class="tag-activity m-2"><%= @place.type_of_place %></i>
    <% unless @place.available_for == "üï∫ Les deux" %>
    <i class="tag-activity m-2"><%= @place.available_for %></i></p>
    <% else %>
    <i class="tag-activity m-2"><%= "‚åõ Location temporaire" %></i></p>
    <p class="my-5"><i class="tag-activity m-2"><%= "üèóÔ∏è Projet long terme" %></i></p>
    <% end %>

    <% if current_user == @place.user %>
    <p class="my-5 mx-2"><%= link_to "‚úèÔ∏è Modifier", edit_place_path, class: "link-solo" %></p>
    <% end %>
    <% if current_user.nil? %>
    <p class="my-5 mx-2"><%= link_to "üí° Vous devez vous connecter pour proposer un projet", new_user_session_path, class: "link-solo" %></p>
    <% elsif !current_user.local_authority %>
    <p class="my-5 mx-2"><%= link_to "üí° Proposer un projet", new_place_project_path(@place.id), class: "link-solo" %></p>
    <% end %>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-12 col-lg-6">
    <h3 class="text-center"><strong>Localisation</strong></h3>
    <p class="my-2">üìç<em><%= @place.address %></em></p>
    <div style="width: 100%; height: 400px;"
    class="map-index"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    </div>
    <div class="col-12 col-lg-6">
    <h3 class="text-center"><strong>Projets en cours</strong></h3>
    <% if @place.projects.nil? %>
    <p>Il n'y a pas encore de projet en cours pour ce lieu, proposez en un !</p>
    <% else %>
        <% @place.projects.each do |project| %>
      <div class="card-project my-5" data-aos="flip-down">
      <%= cl_image_tag project.user.photo.key, crop: :fill %>
        <div class="card-project-infos">
          <h2>Projet de <%= project.user.first_name %> pour <%= @place.title %>
          <% if current_user == project.user %>
          <%= link_to(place_project_path(@place.id, project.id), data: {turbo_method: :delete, turbo_confirm: "Etes-vous s√ªr.e de vouloir supprimer ce projet?"}) do%>
          <i class="fa-solid fa-trash-can"></i>
          <% end %>
          <% end %>
          </h2>
          <h3><%= project.accepted ? "‚úÖ Ce projet est accept√©" : "‚åö Ce projet est en attente d'acceptation" %></h3>
          <p><%= project.details %></p>
          <p><%= project.start_date %><% if project.end_date %> - <%= project.end_date%><% end %></p>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
  </div>

</div>
