<div class="container m-5">
 <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-6">
    <h2 class="my-3"><strong>S'inscire</strong></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "Prénom" %>
    <%= f.input :last_name, label: "Nom" %>
    <%= f.input :local_authority, label: "Je représente une collectivité" %>
    <%= f.input :authority_name, label: "Nom de la collectivité" %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, label: "Mot de passe" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, label: "Confirmez votre mot de passe" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Je m'inscris", class: "btn btn-flat mb-4" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
    </div>
 </div>
</div>
